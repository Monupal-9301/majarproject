<% layout("layouts/boilerplate") %>
<style>
    .switch-box{
        display: flex;
        align-items: center;
        border: 2px solid black;
        height: 3.5rem;
        border-radius: 1.2rem;
        padding: 1rem 1rem;
    }
    .taxinfo{
        display: none;

    }
</style>
<body>
    <div class="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic city</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>amazing pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tent"></i></div>
            <p>camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>doms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-school"></i></div>
            <p>school</p>
        </div>
        <div class="switch-box">
            <div class="form-check form-switch form-check-reverse" id="switch-btn">
              <input class="form-check-input" type="checkbox" id="switchCheckReverse">
              <label class="form-check-label" for="switchCheckReverse">Display total after tax</label>
            </div>
        </div>
        
    </div>
    

        
    
    
    <div class="row  row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-4">
        <% for( let datas of data) { %>
            <a href="/listing/<%= datas._id %>" class="text-link">
                <div class="card listing-card" style="width: 17rem;">
                    <img src="<%= datas.image.url %>" class="card-main-img-top " alt="...">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                    <b class="card-text"><%= datas.title %></b>
                      
                    <p class="card-price"> &#x20B9;<%= datas.price.toLocaleString("en-IN") %>/night  <i class="taxinfo"> &nbsp; &nbsp; +18 GST</i></p>
                    
                    </div>
                  </div>
                  <br>
            </a>
            
            <% } %>

    </div>
</body>
<script>
    const swhbtn= document.getElementById("switch-btn");
    swhbtn.addEventListener("click",()=>{
        let taxinfo=document.getElementsByClassName("taxinfo");
        for(taxsinfo of taxinfo){
            if(taxsinfo.style.display !="inline"){
                taxsinfo.style.display="inline";
            }
            else{
                taxsinfo.style.display="none";
            }
            
        }
    })
    
</script>
